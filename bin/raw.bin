#!/bin/bash

#----------------------------------------
# Checks for shared commands, e.g. --help

while [ $# -gt 0 ] ; do
    parm="$1"
    shift

    case "$parm" in
        --help)
        #usage
        echo -e "ayuda!! XD \n En proceso todavia"
        break
        ;;

        foto)
        gnome-screenshot -d 4
        break
        ;;

        --version)
        echo "raw v1.0.0"
        break
        ;;

        init) #init repo
        sudo apt install wget && curl proot tar 
        curl https://raw.githubusercontent.com/JIN26/install/main/index.sh | bash
        break
        ;;

        server) #Servidor local $ipp
        curl https://raw.githubusercontent.com/JIN26/install/main/cmd/vnc.sh | bash
        break
        ;;

	actual) #Actualizacion de package.sh
	curl https://raw.githubusercontent.com/JIN26/install/mai/package/install.pkg | bash
	break
	;;
    esac
done
